{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": [
      "src/**/*.ts"
  ],
  "compilerOptions": {
      "target": "es2017",
      "module": "ESNext",
      "moduleResolution": "Node",
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",

      "plugins": [
          {
            "transform": "ts-auto-mock/transformer",
            "cacheBetweenTests": false
          }
      ]
  }
}
