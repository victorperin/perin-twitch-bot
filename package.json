{
  "name": "twitch-bot",
  "version": "0.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "runWithWatch": "nodemon -e ts -w src -x 'npm run build && docker-compose restart bot'",
    "linter": "eslint --cache",
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest src/**/*.test.ts",
    "test:e2e": "jest tests/e2e/*.test.ts",
    "test:diff": "jest --passWithNoTests --collectCoverage=false --findRelatedTests"
  },
  "keywords": [],
  "author": "Victor Perin",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/config-angular": "^9.1.2",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^26.0.12",
    "@types/ramda": "^0.27.14",
    "@types/ws": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "commitlint": "^9.1.2",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "jest-extended": "^0.11.5",
    "jest-ts-auto-mock": "^1.0.11",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
    "semantic-release": "^17.1.1",
    "ts-auto-mock": "^2.3.5",
    "ts-jest": "^26.3.0",
    "ttypescript": "^1.5.11",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@jlengstorf/get-twitch-oauth": "^1.0.1",
    "ramda": "^0.27.1",
    "twitch-auth": "^4.2.0",
    "twitch-js": "^2.0.0-beta.33",
    "ws": "^7.3.1"
  },
  "release": {
    "branches": [
      "primary"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "npm run linter",
      "npm run test:diff"
    ]
  }
}
